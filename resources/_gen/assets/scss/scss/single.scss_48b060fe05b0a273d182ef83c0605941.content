.article-wrap{width:80%;max-width:1000px;margin:20px auto;position:relative;display:flex}.article-wrap>article{flex:1}.article-wrap>article>img{max-width:680px;border-radius:10px}.article-wrap>article>p:not(.date){line-height:30px}.article-wrap>article>.content img{width:100%;max-width:680px;min-height:400px}.article-wrap>article>.content>p{line-height:30px}.article-wrap>aside{width:200px;margin-top:40px;padding-left:20px}nav#TableOfContents ul li{margin-bottom:10px}nav#TableOfContents ul li>a{width:100%;display:inline-block;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}nav#TableOfContents ul li>ul{width:calc(100% - 20px);margin-top:10px;margin-left:30px}.fix-table-content{position:fixed;top:20px}